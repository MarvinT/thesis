  keywords      = {Neurons; Nonlinear Dynamics; Models: Neurological; Humans; Neural Networks (Computer); Animals},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&cmd=Retrieve&dopt=AbstractPlus&list_uids=19568981},
}

