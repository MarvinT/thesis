  keywords      = {Cerebral Cortex; Adult; Male; Habituation: Psychophysiologic; Brain Mapping; Time Factors; Learning; Humans; Oxygen; Smell; Magnetic Resonance Imaging; Female; Odors; Neuronal Plasticity; Image Processing: Computer-Assisted},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&cmd=Retrieve&dopt=AbstractPlus&list_uids=17178411},
}

@Article{Li2004,
