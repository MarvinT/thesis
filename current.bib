  keywords      = {Visual Perception; Neurons; Neural Pathways; Contrast Sensitivity; Synaptic Transmission; Humans; Orientation; Animals; Visual Cortex; Action Potentials; Models: Neurological; Neural Inhibition; Geniculate Bodies},
  language      = {eng},
