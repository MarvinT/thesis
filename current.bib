  keywords      = {Acoustic Stimulation/methods; Adaptation, Physiological/physiology; Animal Communication; Animals; Auditory Pathways/physiology; Auditory Perception/*physiology; Evoked Potentials, Auditory/*physiology; Hearing/*physiology; Humans; *Models, Neurological; Predictive Value of Tests},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&db=PubMed&dopt=Citation&list_uids=19828357},
}

@Article{Woldorff1993,
  author        = {Woldorff, M. G. and Gallen, C. C. and Hampson, S. A. and Hillyard, S. A. and Pantev, C. and Sobel, D. and Bloom, F. E.},
  title         = {Modulation of early sensory processing in human auditory cortex during auditory selective attention},
  journal       = {Proc Natl Acad Sci U S A},
