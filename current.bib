  title         = {Functional connectivity and tuning curves in populations of simultaneously recorded neurons},
  journal       = {PLoS Comput Biol},
  year          = {2012},
  volume        = {8},
  number        = {11},
  pages         = {e1002775},
  note          = {Stevenson, Ian HLondon, Brian MOby, Emily RSachs, Nicholas AReimer, JacobEnglitz, BernhardDavid, Stephen VShamma, Shihab ABlanche, Timothy JMizuseki, KenjiZandvakili, AminHatsopoulos, Nicholas GMiller, Lee EKording, Konrad Peng1R01NS063399/NS/NINDS NIH HHS/2P01NS044393/NS/NINDS NIH HHS/5R21NS066260/NS/NINDS NIH HHS/EY016774/EY/NEI NIH HHS/K99DC010439/DC/NIDCD NIH HHS/R00 DC010439/DC/NIDCD NIH HHS/R01 DC005779/DC/NIDCD NIH HHS/R01DC005779/DC/NIDCD NIH HHS/R01NS048845/NS/NINDS NIH HHS/R01NS053603/NS/NINDS NIH HHS/R01NS45853/NS/NINDS NIH HHS/UL1RR0254741/RR/NCRR NIH HHS/Research Support, N.I.H., ExtramuralResearch Support, Non-U.S. Gov't2012/11/21 06:00PLoS Comput Biol. 2012;8(11):e1002775. doi: 10.1371/journal.pcbi.1002775. Epub 2012 Nov 15.},
  __markedentry = {[marvi:6]},
  abstract      = {How interactions between neurons relate to tuned neural responses is a longstanding question in systems neuroscience. Here we use statistical modeling and simultaneous multi-electrode recordings to explore the relationship between these interactions and tuning curves in six different brain areas. We find that, in most cases, functional interactions between neurons provide an explanation of spiking that complements and, in some cases, surpasses the influence of canonical tuning curves. Modeling functional interactions improves both encoding and decoding accuracy by accounting for noise correlations and features of the external world that tuning curves fail to capture. In cortex, modeling coupling alone allows spikes to be predicted more accurately than tuning curve models based on external variables. These results suggest that statistical models of functional interactions between even relatively small numbers of neurons may provide a useful framework for examining neural coding.},
  address       = {Redwood Center for Theoretical Neuroscience, University of California, Berkeley, Berkeley, CA, USA. i-stevenson@berkeley.edu},
  doi           = {10.1371/journal.pcbi.1002775},
  keywords      = {Action Potentials/physiology; Animals; Brain/physiology; Computational Biology; Computer Simulation; Databases, Factual; Electrodes; Electrophysiology; Macaca; *Models, Neurological; *Models, Statistical; Nerve Net/physiology; Neurons/*physiology},
  url           = {http://www.ncbi.nlm.nih.gov/pubmed/23166484},
}

