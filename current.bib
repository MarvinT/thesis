  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&cmd=Retrieve&dopt=AbstractPlus&list_uids=12130775},
}

@Article{Perkel1967,
  author        = {Perkel, D. H. and Gerstein, G. L. and MOORE, G. P.},
