  doi           = {10.1162/0899766053429435},
  file          = {:file://localhost/Users/jamie/Documents/Papers/2005/Thomson/Neural%20Computation%202005%20Thomson-1.pdf:PDF},
  keywords      = {Signal Detection: Psychological; Algorithms; Information Theory; Nervous System Physiological Phenomena; Entropy; Sensation; Discrimination (Psychology); Observer Variation; Models: Neurological; Animals; Probability Theory; Humans},
  language      = {eng},
