  pages         = {458--65},
  note          = {Ahissar, MeravResearch Support, Non-U.S. Gov'tReviewEnglandTrends in cognitive sciencesTrends Cogn Sci. 2007 Nov;11(11):458-65. Epub 2007 Nov 5.},
  __markedentry = {[marvi:6]},
  abstract      = {The 'core deficit' of dyslexia has been characterized by different researchers in terms of either phonological impairments or of difficulties in processing basic visual and auditory stimuli. Recent findings suggest that a single type of impairment in the dynamics of perception, which affects the efficiency of short-term memory, might underlie the broad range of difficulties of dyslexics. Experimental findings show that the general population quickly and automatically tunes around incoming stimuli, 'anchors to them' and performs faster and more accurately when these stimuli are subsequently repeated. Dyslexic individuals fail to benefit from stimulus-specific repetitions. This deficit can account for phonological, working memory, visual and auditory difficulties, in addition to the greater sensitivity of dyslexics to external noise.},
  address       = {Hebrew University, Mount Scopus, Jerusalem, Israel. msmerava@pluto.huji.ac.il},
  doi           = {S1364-6613(07)00248-3 [pii]10.1016/j.tics.2007.08.015},
  keywords      = {Articulation Disorders/physiopathology; Attention/physiology; Auditory Perception/physiology; Brain/pathology/physiology; Dyslexia/*physiopathology; Humans; Visual Perception/physiology},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&db=PubMed&dopt=Citation&list_uids=17983834},
}

@Article{Ahissar2006,
  author        = {Ahissar, M. and Lubin, Y. and Putter-Katz, H. and Banai, K.},
  title         = {Dyslexia and the failure to form a perceptual anchor},
  journal       = {Nat Neurosci},
  year          = {2006},
  volume        = {9},
  number        = {12},
  pages         = {1558--64},
  note          = {Ahissar, MeravLubin, YedidaPutter-Katz, HannaBanai, KarenResearch Support, Non-U.S. Gov'tUnited StatesNature neuroscienceNat Neurosci. 2006 Dec;9(12):1558-64. Epub 2006 Nov 19.},
  __markedentry = {[marvi:6]},
  abstract      = {In a large subgroup of dyslexic individuals (D-LDs), reading difficulties are part of a broader learning and language disability. Recent studies indicate that D-LDs perform poorly in many psychoacoustic tasks compared with individuals with normal reading ability. We found that D-LDs perform as well as normal readers in speech perception in noise and in a difficult tone comparison task. However, their performance did not improve when these same tasks were performed with a smaller stimulus set. In contrast to normal readers, they did not benefit from stimulus-specific repetitions, suggesting that they have difficulties forming perceptual anchors. These findings are inconsistent with previously suggested static models of dyslexia. Instead, we propose that D-LDs' core deficit is a general difficulty in dynamically constructing stimulus-specific predictions, deriving from deficient stimulus-specific adaptation mechanisms. This hypothesis provides a direct link between D-LDs' high-level difficulties and mechanisms at the level of specific neuronal circuits.},
  address       = {Department of Psychology, Hebrew University, Jerusalem 91904, Israel. msmerava@mscc.huji.ac.il},
  doi           = {nn1800 [pii]10.1038/nn1800},
  keywords      = {Adaptation, Psychological; Adolescent; Child; Cognition/*physiology; Dyslexia/*physiopathology/psychology; Female; Humans; Learning/*physiology; Learning Disorders/physiopathology/psychology; Mental Recall/*physiology; Set (Psychology); Speech Perception/*physiology},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?cmd=Retrieve&db=PubMed&dopt=Citation&list_uids=17115044},
}

