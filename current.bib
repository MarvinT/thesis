  keywords      = {Photic Stimulation; Psychophysics; Behavior: Animal; Animals; Discrimination (Psychology); Neurons; Male; Pattern Recognition: Visual; Choice Behavior; Visual Cortex; Action Potentials; Reaction Time; Macaca mulatta; Brain Mapping},
  language      = {eng},
