  keywords      = {Animals; Fourier Analysis; Regression Analysis; Cochlear Nerve; Cochlea; Time Factors; Models: Neurological; Auditory Perception; Auditory Pathways; Vocalization: Animal; Sound; Mathematics},
  language      = {eng},
