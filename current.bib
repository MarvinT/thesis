  file          = {:file://localhost/Users/jamie/Documents/Papers/1988/Metherate/J%20Neurophysiol%201988%20Metherate-1.pdf:PDF},
  keywords      = {Time Factors; Somatosensory Cortex; Glutamates; Acetylcholine; Electric Stimulation; Iontophoresis; Animals; Skin; Neurons: Afferent; Atropine; Evoked Potentials: Somatosensory; Glutamic Acid; Cats; Physical Stimulation; Cells: Cultured},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&cmd=Retrieve&dopt=AbstractPlus&list_uids=2897435},
}

@Article{Miller1991,
  author        = {Miller, E. K. and Li, L. and Desimone, R.},
  title         = {A neural mechanism for working and recognition memory in inferior temporal cortex},
