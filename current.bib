@Article{Kreuz2009a,
  author        = {Kreuz, T. and Chicharro, D. and Andrzejak, R. G. and Haas, J. S. and Abarbanel, H. D.},
  title         = {Measuring multiple spike train synchrony},
  journal       = {Journal of neuroscience methods},
  year          = {2009},
  volume        = {183},
  number        = {2},
  pages         = {287--99},
  note          = {Kreuz, ThomasChicharro, DanielAndrzejak, Ralph GHaas, Julie SAbarbanel, Henry D INetherlandsJ Neurosci Methods. 2009 Oct 15;183(2):287-99. Epub 2009 Jul 8.},
  __markedentry = {[marvi:6]},
  abstract      = {Measures of multiple spike train synchrony are essential in order to study issues such as spike timing reliability, network synchronization, and neuronal coding. These measures can broadly be divided in multivariate measures and averages over bivariate measures. One of the most recent bivariate approaches, the ISI-distance, employs the ratio of instantaneous interspike intervals (ISIs). In this study we propose two extensions of the ISI-distance, the straightforward averaged bivariate ISI-distance and the multivariate ISI-diversity based on the coefficient of variation. Like the original measure these extensions combine many properties desirable in applications to real data. In particular, they are parameter-free, time scale independent, and easy to visualize in a time-resolved manner, as we illustrate with in vitro recordings from a cortical neuron. Using a simulated network of Hindemarsh-Rose neurons as a controlled configuration we compare the performance of our methods in distinguishing different levels of multi-neuron spike train synchrony to the performance of six other previously published measures. We show and explain why the averaged bivariate measures perform better than the multivariate ones and why the multivariate ISI-diversity is the best performer among the multivariate methods. Finally, in a comparison against standard methods that rely on moving window estimates, we use single-unit monkey data to demonstrate the advantages of the instantaneous nature of our methods.},
  address       = {Institute for Nonlinear Sciences, University of California, San Diego, CA, USA. tkreuz@ucsd.edu},
  doi           = {10.1016/j.jneumeth.2009.06.039},
  keywords      = {Action Potentials/*physiology; Animals; Computer Simulation; Electric Stimulation/methods; Nerve Net/*physiology; Neural Inhibition; *Neural Networks (Computer); Neurons/*physiology; Oscillometry/methods; Patch-Clamp Techniques; Rats; Rats, Long-Evans; Reaction Time/physiology; Time Factors},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/pubmed/19591867},
}

@Article{Kreuz2007,
  author        = {Kreuz, T. and Haas, J. S. and Morelli, A. and Abarbanel, H. D. and Politi, A.},
  title         = {Measuring spike train synchrony},
  journal       = {J Neurosci Methods},
  year          = {2007},
  volume        = {165},
  number        = {1},
  pages         = {151--61},
  note          = {Kreuz, ThomasHaas, Julie SMorelli, AliceAbarbanel, Henry D IPoliti, AntonioResearch Support, Non-U.S. Gov'tNetherlandsJournal of neuroscience methodsJ Neurosci Methods. 2007 Sep 15;165(1):151-61. Epub 2007 Jun 2.},
  __markedentry = {[marvi:6]},
  abstract      = {Estimating the degree of synchrony or reliability between two or more spike trains is a frequent task in both experimental and computational neuroscience. In recent years, many different methods have been proposed that typically compare the timing of spikes on a certain time scale to be optimized by the analyst. Here, we propose the ISI-distance, a simple complementary approach that extracts information from the interspike intervals by evaluating the ratio of the instantaneous firing rates. The method is parameter free, time scale independent and easy to visualize as illustrated by an application to real neuronal spike trains obtained in vitro from rat slices. In a comparison with existing approaches on spike trains extracted from a simulated Hindemarsh-Rose network, the ISI-distance performs as well as the best time-scale-optimized measure based on spike timing.},
  address       = {Istituto dei Sistemi Complessi, CNR, Sesto Fiorentino, Italy. tkreuz@ucsd.edu},
  doi           = {S0165-0270(07)00267-1 [pii]10.1016/j.jneumeth.2007.05.031},
