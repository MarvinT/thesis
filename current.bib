  doi           = {00552.2007 [pii]10.1152/jn.00552.2007},
  keywords      = {Acoustic Stimulation; Adaptation, Physiological/*physiology; Animals; Attention/*physiology; Auditory Cortex/*physiology; Auditory Perception/*physiology; Conditioning, Operant/physiology; Cues; Electrophysiology; Female; Ferrets; Neuronal Plasticity/physiology; Psychomotor Performance/physiology},
