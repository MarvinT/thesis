  doi           = {10.1196/annals.1298.013},
  file          = {:file://localhost/Users/jamie/Documents/Papers/2004/Reiner/Ann%20N%20Y%20Acad%20Sci%202004%20Reiner.pdf:PDF},
  keywords      = {Auditory Pathways; Neural Pathways; Animals; Terminology as Topic; Songbirds; Vocalization: Animal; Brain; Telencephalon},
  language      = {eng},
  url           = {http://www.ncbi.nlm.nih.gov/entrez/query.fcgi?db=pubmed&cmd=Retrieve&dopt=AbstractPlus&list_uids=15313771},
}

@Article{Reynolds2009,
