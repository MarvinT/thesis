  keywords      = {Algorithms; Animals; Fixation, Ocular/physiology; Functional Laterality/physiology; Haplorhini; Neurons/*physiology; Photic Stimulation; Psychomotor Performance/physiology; Saccades/physiology; Space Perception/physiology; Visual Cortex/cytology/*physiology; Visual Perception/physiology},
  language      = {eng},
